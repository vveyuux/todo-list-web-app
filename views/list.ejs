<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/1e6ac674d0.js" crossorigin="anonymous"></script>

    <!-- Favicons -->
    <link rel="apple-touch-icon" sizes="180x180" href="images/icons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="images/icons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="images/icons/favicon-16x16.png">
    <link rel="manifest" href="images/icons/site.webmanifest">
    <link rel="mask-icon" href="images/icons/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&family=Ubuntu:wght@300;400;500;700&display=swap"
        rel="stylesheet">

    <!-- Style -->
    <link rel="stylesheet" href="css/styles.css">

    <title>To Do List</title>
</head>

<body>
    <div class="box">
        <div class="title-box">
            <h1 class="title">
                <%=weekday%>, <span id="day">
                        <%=day%>
                    </span>
            </h1>
            <h1 class="title">
                <span id="month">
                    <%=month%>
                </span>
            </h1>
            <p class="task-number">
                <span>
                    <%=taskNum%>
                </span>
                Tasks
            </p>
        </div>
        <!-- List menu -->

        <div class="list-container">
            <% lists.forEach((listName)=>{%>
                <form action="/<%=listName%>" method="post">
                    <button class="list-btn" type="submit" name="listName" value="<%=listName%>">
                        #<%=listName%>
                    </button>
                </form>
                <%});%>
        </div>

        <ul class="todo-list">
            <% todo.forEach((item)=> {%>
                <div class="todo">
                    <input class="checkbox" type="checkbox">
                    <div class="task">
                        <li>
                            <%=item.name%>
                        </li>
                    </div>
                    <form action="/delete" method="post">
                        <div class="trash-icon">
                            <input type="hidden" name=listName value="<%=listName%>">
                            <button class="delete-btn" type=" submit" name="delete" value="<%=item._id%>">
                                <i class="fa-solid fa-trash-can fa-lg"></i>
                            </button>
                        </div>
                    </form>
                </div>
                <%});%>
        </ul>
        <form class="add-task-form" action="/" method="post">
            <input class="newItem" type="text" name="newItem" placeholder="Add Task" autocomplete="off">
            <button class="add-item" type="submit" name="lists" value="<%=listName%>">+</button>
        </form>
    </div>

</body>

</html>